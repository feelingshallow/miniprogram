page{background:rgba(252,252,252,1);}


.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9998;
  background-color: rgba(252, 252, 252, 1);
}

.tui-header {
  width: 100%;
  font-size: 30rpx;
  line-height: 18px;
  font-weight: bold;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  color: white;
  position: relative;
}

.tui-header .bb {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
text-align: center;
}

.tui-header .bb .name {
  width:100%;
font-size:24px;
font-family:PingFangSC-Semibold,PingFang SC;
font-weight:600;
color:rgba(55,52,71,1);
letter-spacing:1px;
white-space: nowrap;
}

.tui-header .back {
  position: absolute;
  width: 14px;
  height: 23px;
  margin-left:35rpx;
}

.quxiang{width: 90%;margin-left: 5%;display: flex;justify-content: space-around;align-items: center;margin-top: 20rpx;}

.quxiang image{height: 9px;width: 10px;}

.quxiang .bann{display: flex;justify-content: space-around;align-items: center;}
.bann .names{height:36px;width:79px;margin-right: 15rpx;display: flex;justify-content: space-around;align-items: center;
background:rgba(255,255,255,1);
box-shadow:0px 12px 25px -7px rgba(125,168,239,0.3);
border-radius:18px;}


.bann .namess{height:36px;width:79px;margin-right: 15rpx;display: flex;justify-content: space-around;align-items: center;}

.names .detail{margin-right: -35rpx;display: flex;justify-content: center;align-items: center;overflow: hidden;display: -webkit-box; -webkit-line-clamp: 1;-webkit-box-orient: vertical;text-overflow:ellipsis;}

.quxiang text{
  white-space: nowrap;margin-right: 15rpx;
}


.tops{width: 85%;margin-left: 12%;border-bottom: 1px solid gray;margin-top:90rpx;display: flex;justify-content: space-around;align-items: center;position: relative}

.tops .duan{border-right: 1px solid gray;height: 20rpx;position: relative;width: 10%;}
.duan text{font-size:9px;position: absolute;bottom:10px;left:20px;
font-family:PingFangSC-Medium,PingFang SC;
font-weight:500;
color:rgba(55,52,71,1);
line-height:13px;}

.tops .qjrs{position: absolute;right: 0;bottom: -20px;font-size:9px;
font-family:PingFangSC-Semibold,PingFang SC;
font-weight:600;
color:rgba(55,52,71,1);
line-height:13px;}


.content{width: 95%;margin-left: 2.5%; display: flex;flex-direction: row;align-items: center;justify-content: flex-start;}
.content .names1{width: 10%;display: flex;justify-content: flex-start;align-items: center;flex-direction: column;
}

.names1 text{margin-top: 30rpx;margin-bottom: 30rpx;font-size:9px;
  height:21px;font-family:PingFangSC-Medium,PingFang SC;
font-weight:500;
color:rgba(55,52,71,1);
line-height:13px;}

.content .shuju{width: 90%;border-left: 1px solid gray;display: flex;justify-content: flex-start;flex-direction: column;}



.shuju .li{margin-top: 30rpx;margin-bottom: 30rpx;
  height:21px;background:linear-gradient(270deg,rgba(254,58,58,1) 0%,rgba(167,75,215,0.8) 43%,rgba(105,52,219,0.7) 74%,rgba(26,78,188,0.8) 100%);position: relative;
}

.li .ren{position: absolute;right: 5rpx;display: flex;justify-content: center;align-items: center;
  height:21px;
font-size:11px;
font-family:PingFangSC-Medium,PingFang SC;
font-weight:500;
color:rgba(255,255,255,1);
line-height:16px;
}