page{background:rgba(252,252,252,1);}


.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9998;
  background-color: rgba(252, 252, 252, 1);
}

.tui-header {
  width: 100%;
  font-size: 30rpx;
  line-height: 18px;
  font-weight: bold;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  color: white;
  position: relative;
}

.tui-header .bb {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
text-align: center;
}

.tui-header .bb .name {
  width:100%;
font-size:24px;
font-family:PingFangSC-Semibold,PingFang SC;
font-weight:600;
color:rgba(55,52,71,1);
letter-spacing:1px;
white-space: nowrap;
}

.tui-header .back {
  position: absolute;
  width: 14px;
  height: 23px;
  margin-left:35rpx;
}

 .content{width:90%;display: flex;flex-direction: column;justify-content: center;align-items: center;
margin-left:5%;}


.content .title{
  width: 60%;display: flex;flex-direction: row;justify-content: center;align-items: center;flex-flow: wrap;text-align:center;height:58px;
font-size:21px;
font-family:PingFangSC-Semibold,PingFang SC;
font-weight:600;
color:rgba(55,52,71,1);
line-height:29px;

}

.content .time{height:16px;margin-top: 10rpx;display: flex;justify-content: center;align-items: center;
font-size:11px;
font-family:PingFangSC-Semibold,PingFang SC;
font-weight:600;
color:rgba(55,52,71,1);
line-height:16px;}

.content .author{margin-top: 20rpx;display: flex;justify-content: center;align-items: center;
  height:16px;
font-size:11px;
font-family:PingFangSC-Semibold,PingFang SC;
font-weight:600;
color:rgba(55,52,71,1);
line-height:16px;
}

.content .ydl{margin-top: 30rpx;
  width: 100%;display: flex;flex-direction: row;justify-content: flex-end;align-items: center;
}

.ydl .zan{display: flex;justify-content: center;align-items: center;
  margin-left: 20rpx;
}

.zan image{
  width:17px;
height:15px;
}

.content .detail{margin-top:40rpx;}
.content .detail image{width: 100%;height: 100%;}